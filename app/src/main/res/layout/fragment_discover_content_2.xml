<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_chapter2"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="20dp"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/text_chapter1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/chapter2_content1"
                android:layout_margin="20dp"
                android:textSize="16sp"
                />
            <ImageView
                android:id="@+id/img1"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:src="@drawable/adibalex"/>
            <TextView
                android:id="@+id/text_chapter2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:text="@string/chapter2_content2"
                android:textSize="16sp"/>

            <Button
                android:layout_margin="10dp"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="understood!"
                android:textAllCaps="false"/>
        </LinearLayout>


    </ScrollView>



</LinearLayout>