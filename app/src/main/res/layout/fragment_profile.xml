                                android:paddingTop="10dp"
                                android:weightSum="2">
                                <LinearLayout
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center_horizontal"
                                    android:layout_weight="1">
