<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/swatch1_2"
    tools:context=".activity.AssessmentActivity">

    <!--    <Button
            android:id="@+id/btn_assessment_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="305dp" />-->

    <ImageButton
        android:id="@+id/imgBtn_start"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/style_button_round"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_play" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="next"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="30dp"
        android:text="number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_ass"
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/adibalex"
            android:scaleType="centerCrop" />

        <Button
            android:id="@+id/btn_option_1"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:text="Option 1"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_option_2"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:text="Option 2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_option_3"
            android:layout_width="240dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:text="Option 3"
            android:textAllCaps="false" />

        <TextView
            android:id="@+id/txt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Score" />
    </LinearLayout>
</RelativeLayout>