<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/swatch1_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register your account now!"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/ic_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/adibalex" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardBackgroundColor="@color/swatch1_4"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/et_register_email"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/style_edittext_login"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/swatch1_7" />

            <EditText
                android:id="@+id/et_register_name"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/style_edittext_login"
                android:hint="name"
                android:inputType="textPersonName"
                android:textColorHint="@color/swatch1_7" />

            <EditText
                android:id="@+id/et_register_password"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:background="@drawable/style_edittext_login"
                android:hint="password"
                android:inputType="textPassword"
                android:textColorHint="@color/swatch1_7" />

            <EditText
                android:id="@+id/et_register_confirm_password"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:background="@drawable/style_edittext_login"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:textColorHint="@color/swatch1_7" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style_button_outline"
            android:text="register"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_register_register"
            app:layout_constraintEnd_toEndOf="@+id/btn_register_register"
            app:layout_constraintStart_toStartOf="@+id/btn_register_register"
            app:layout_constraintTop_toTopOf="@+id/btn_register_register" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_register_login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/style_button_outline"
            android:text="already have an account?"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>



</LinearLayout>